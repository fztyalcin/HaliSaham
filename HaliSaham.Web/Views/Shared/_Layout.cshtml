@using HaliSaham.Web.Code;
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HaliSaham.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HaliSaham.Web.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script>
        let TOKEN = "@Repo.Session.Token";

    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo halısaha.png" style="width:100px;height:80px" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home/Hakkimizda">Hakkımızda</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/HaliSahalar">Halı Sahalar</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/Iletisim">İletişim</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/SiteKullanimSartlari">Site Kullanım Şartları</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Home/KvkkveGizlilik">KVKK ve Gizlilik</a>
                        </li>
                        <li class="nav-item">
                            @if (string.IsNullOrEmpty(Repo.Session.EPosta))
                            {

                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login"> Giriş Yap</a>
                            }
                            else
                            {
                                <a class="navbar-link text-dark" asp-area=""> @Repo.Session.EPosta</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-center">
        <div class="container">
            &copy; 2023 - Yaptım Oldu Mu? - Olmuş Olmuş :P
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

